<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.filmdb.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
      <children>
         <Button maxWidth="100.0" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" onAction="#onAddButtonClick" prefHeight="30.0" prefWidth="100.0" text="Hozzáadás" />
         <Button maxWidth="100.0" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" onAction="#onEditButtonClick" prefHeight="30.0" prefWidth="100.0" text="Módosítás" />
         <Button maxWidth="100.0" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" onAction="#onTorlesButtonClick" prefHeight="30.0" prefWidth="100.0" text="Törlés" />
      </children>
   </HBox>
   <TableView fx:id="filmTable" maxHeight="1000.0" prefHeight="200.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
     <columns>
       <TableColumn fx:id="colCim" minWidth="50.0" prefWidth="200.0" text="Cím" />
       <TableColumn fx:id="colKategoria" minWidth="50.0" prefWidth="150.0" text="Kategória" />
         <TableColumn fx:id="colHossz" prefWidth="75.0" text="Hossz" />
         <TableColumn fx:id="colErtekeles" prefWidth="75.0" text="Értékelés" />
     </columns>
   </TableView>
</VBox>
